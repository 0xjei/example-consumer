{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "outDir": "dist",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["types"],
  },
  "ts-node": {
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs"
    }
  }
}